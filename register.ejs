            <p>نعتذر, لقد انتهى وقت التسجيل في الدورة</p>
        </div>
        <div class="btns-container">
            <button class="btn-1">رجوع</button>
            <button class="btn-2">رجوع</button>
        </div>
    </div> -->
    <%- include("partials/Footer.ejs") %>
    <script src="https://kit.fontawesome.com/8774374657.js" crossorigin="anonymous"></script>
    <script src="/script/register.js" type="text/javascript"></script>
    <script src="/script/main.js" type="text/javascript"></script>
    <script src="/script/vanilla-tilt.js" type="text/javascript"></script>
    <script type="text/javascript">
        if(window.innerWidth > 600){
                VanillaTilt.init(document.querySelector(".form-container"), {
                max: 2,
                speed: 1000
                });
                VanillaTilt.init(document.querySelector(".expire-container"), {
                max: 2,
                speed: 1000
                });
        }
    </script>
    <script type="text/javascript"
    src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js">
    </script>

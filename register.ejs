<!DOCTYPE html>
<html lang="en">

<%- include('partials/Header.ejs') %>
<body dir="ltr" class="register-page-container">
    
    <div class="notification">
        <h2>
            <i class="fa-solid fa-check"></i>
        </h2>
        <p>
            You Have Registered <span>Successfully!</span>
        </p>
    </div>
    <%- include("partials/Cursors.ejs") %>
    <%- include('partials/Navbar.ejs') %>
    <!-- End Header -->
    <main class="register-content-container">
            <div class="title">
                <div class="image-container">
                    <img class="logo" alt="logo" src="/images/logo.jpg" />
                </div>
                <h2><span>TA3ALM</span> ENGLISH</h2>
            </div>
            <div class="form-container">
                <div class="glow"></div>
                <h2>Register <span>Now!</span></h2>
                <form>
                    <div>
                        <label for="fullName">Full Name</label>
                        <input type="text" name="fullName" id="fullName" required />
                    </div>
                    <div>
                        <label for="phoneNumber">Phone Number</label>
                        <input type="text" name="phoneNumber" id="phoneNumber" required />
                    </div>
                    <div>
                        <label for="telegram">Telegram  Username</label>
                        <input type="text" name="telegram" id="telegram" required />
                    </div>
                    <div>
                        <label for="skillsLevel">English Level</label>
                        <div class="range-container">
                            <input type="range" name="skillsLevel" id="skillsLevel" class="slider" min="0" max="100" step="20" value="20" required>
                            <div class="selector">
                                <div class="btn"></div>
                                <div class="value"></div>
                            </div>
                        </div>
                    </div>
                    <div class="courses-container">
                        <label for="course-name">Course Name</label>
                        <div class="course-name" id="courseName">English Basics Course</div>
                        <div class="courses-dropdown">
                          <ul class="courses-dropdown-list">
                            <%courses.forEach((course) => {%>
                                <li  onclick='handleChange(this)' value="<%=course.price%>" class='<%=course.isActive  ? '' : 'notActive'%>' activity=<%=course.isActive%>> 
                                    <div class='name'><p><%=course.title%> <span><%=course.isActive ? '' : "Time's Up" %></span></p></div>
                                </li>
                            <%})%>
                          </ul>
                        </div>
                    </div>
                    <div>
                      <label for="specialization">Specialization</label>
                      <input type="text" name="specialization" id="specialization" required />
                  </div>
                    <div class="submit-btns-container" >
                        <button class="submit-btns submit-btn-1">Register</button>
                        <button class="submit-btns submit-btn-2">Register</button>
                    </div>
                </form>
                <p id="message"></p>
            </div>
    </main>
